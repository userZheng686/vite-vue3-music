{
  "name": "neteasecloudmusic",
  "version": "1.0.0",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite",
    "build": "rimraf dist && rimraf release && vite build && electron-builder -p always",
    "package": "electron-builder",
    "serve": "vite preview",
    "git": "git add . && git cz && git push"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.0.5",
    "@rollup/plugin-alias": "^4.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/js-cookie": "^3.0.2",
    "@vueuse/components": "^8.7.5",
    "@vueuse/core": "^8.7.5",
    "acrcloud": "^1.4.0",
    "axios": "^0.27.2",
    "blueimp-md5": "^2.19.0",
    "crypto-js": "^4.1.1",
    "default-passive-events": "^2.0.0",
    "electron-store": "^8.0.2",
    "electron-updater": "^5.3.0",
    "element-china-area-data": "^5.0.2",
    "element-plus": "^2.2.6",
    "ffmetadata": "^1.7.0",
    "install": "^0.13.0",
    "js-base64": "^3.7.2",
    "md5": "^2.3.0",
    "mitt": "^3.0.0",
    "music-metadata": "^7.12.4",
    "npm": "^8.12.2",
    "pinia": "^2.0.14",
    "qrcode.vue": "^3.3.3",
    "qrcodejs2": "^0.0.2",
    "vite-plugin-optimizer": "^1.4.0",
    "vue-router": "^4.0.16",
    "vue3-menus": "^1.1.2",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.1.2",
    "electron": "^21.1.0",
    "electron-builder": "^23.3.3",
    "typescript": "^4.8.4",
    "vite": "^3.2.2",
    "vite-electron-plugin": "^0.5.0",
    "vite-plugin-electron-renderer": "^0.10.2",
    "vue": "^3.2.40",
    "vue-tsc": "^1.0.9",
    "unplugin-auto-import": "^0.8.8",
    "unplugin-icons": "^0.14.1",
    "unplugin-vue-components": "^0.19.6",
    "vite-plugin-commonjs": "^0.5.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-electron": "^0.4.8",
    "vite-plugin-inspect": "^0.7.5",
    "vite-plugin-require-transform": "^1.0.3",
    "commitizen": "^4.2.5",
    "cz-customizable": "^7.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.52.3",
    "@babel/preset-env": "^7.18.9",
    "@iconify/json": "^2.1.63",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@types/jsmediatags": "^3.9.3",
    "@types/node": "^18.0.6",
    "@vue/compiler-sfc": "^3.2.37",
    "@vuedx/typescript-plugin-vue": "^0.7.5",
    "@vueuse/electron": "^8.9.2",
    "autoprefixer": "^10.4.7"
  },
  "build": {
    "appId": "com.neteasecloudmusic.desktop",
    "productName": "neteasecloudmusic",
    "asar": true,
    "copyright": "Copyright © 2022 neteasecloudmusic",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "./public/icon.ico",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "background": "./public/appdmg.png",
      "icon": "./public/icon.ico",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "icon": "./public/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        "zip"
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "guid": "neteasecloudmusic",
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "./public/icon.ico",
      "uninstallerIcon": "./public/icon.ico",
      "installerHeaderIcon": "./public/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "网易云音乐"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://neteasemusic.netlify.app/#/upgrade"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "版本更新的具体内容"
    },
    "fileAssociations": [
      {
        "ext": [
          ".mp3",
          ".flac",
          ".mpeg",
          ".MPEG",
          ".wma"
        ],
        "name": "audio",
        "role": "Editor"
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
